        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_App.Productstuff"
        mc:Ignorable="d"
        Title="AllProductsWindow" Height="450" Width="500">
    <Grid>
        <DataGrid x:Name="ProductsGrid" Height="400" Width="450"  ItemsSource="{Binding AllProductsWindow.allproductData, Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center">
            
        </DataGrid>
    </Grid>
</Window>
