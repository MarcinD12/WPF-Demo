<Window x:Class="WPF_App.Productstuff.NewProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_App.Productstuff"
        mc:Ignorable="d"
        Title="NewProductWindow" Height="150" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Fill fields: Product Name/Product Type/Price" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="4"></TextBlock>
        <TextBox x:Name="prodNameInp" Grid.Row="2" Grid.Column="1" Text="">  </TextBox>
        <Button x:Name="ProductAddBtn" Content="ADD PRODUCT" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="4" > </Button>
                
    </Grid>
</Window>
