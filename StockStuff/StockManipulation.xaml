<Page x:Class="WPF_App.StockStuff.StockManipulation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_App.StockStuff"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StockManipulation">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Text="xDDD" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center"></TextBlock>
        <ComboBox x:Name="productComboBox" Grid.Row="2" Grid.Column="1"  SelectionChanged="productComboBox_SelectionChanged" ></ComboBox>
        <ComboBox x:Name="shopCombobox" Grid.Row="2" Grid.Column="2"  Visibility="Hidden" SelectionChanged="shopCombobox_SelectionChanged"></ComboBox>
        <TextBox x:Name="currentStock" Grid.Row="2" Grid.Column="4" Text=""></TextBox>
    </Grid>
</Page>
